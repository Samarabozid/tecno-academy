<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="tecno.academy.TecnoAcademy.TeacherApp.AddGroupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/studying"
        android:alpha=".1"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerInParent="true"
        />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tecno.academy.TecnoAcademy.TeacherApp.AddPdfActivity"
    android:orientation="vertical"
    >

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rippleWhite"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/add_pdf_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="اضافة ملف"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

    </com.balysv.materialripple.MaterialRippleLayout>

    <EditText
        android:id="@+id/pdf_title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edittext_corners"
        android:padding="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textDirection="rtl"
        android:hint="اختر اسم الملف"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/seekbar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cpb_background_progressbar_color="@android:color/darker_gray"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progressbar_color="@color/colorAccent"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/progress_txt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="40sp"
            />

    </RelativeLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rippleWhite"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/upload_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="رفع الملف"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>

</RelativeLayout>